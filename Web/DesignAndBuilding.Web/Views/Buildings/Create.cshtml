@using DesignAndBuilding.Common
@using DesignAndBuilding.Web.ViewModels.Building;
@using DesignAndBuilding.Data.Models;
@model BuildingInputModel
@{
    this.ViewData["Title"] = "Създай обект";
}
<div id="alert"></div>
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TotalBuildUpArea"></label>
                <input asp-for="@Model.TotalBuildUpArea" class="form-control" />
                <span asp-validation-for="@Model.TotalBuildUpArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Town"></label>
                <input asp-for="@Model.Town" class="form-control" />
                <span asp-validation-for="@Model.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BuildingType"></label>
                <select asp-for="@Model.BuildingType" class="form-control" asp-items="@Html.GetEnumSelectList<BuildingType>()"></select>
                <span asp-validation-for="@Model.BuildingType" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Създай</button>
        </form>
    </div>
</div>