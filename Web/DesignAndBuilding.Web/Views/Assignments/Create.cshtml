@using DesignAndBuilding.Web.ViewModels.Assignment;
@using DesignAndBuilding.Data.Models;
@model AssignmentInputModel
@{
    this.ViewData["Title"] = "Създай задание";
}
<div id="alert"></div>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.DesignerType"></label>
                <select asp-for="@Model.DesignerType" class="form-control" asp-items="@Html.GetEnumSelectList<DesignerType>()"></select>
                <span asp-validation-for="@Model.DesignerType" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Description"></label>
                
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input type="file" id="files" class="file" multiple />
                <input asp-for="Description" type="file" id="files-hidden" class="file" multiple hidden/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div id="visualise-upload-files" hidden>
            </div>
            <p id="remove-info" hidden>Натиснете върху файла, за да го ппремахнете.</p>
            <div class="form-group">
                <label asp-for="@Model.EndDate"></label>
                <input asp-for="@Model.EndDate" class="form-control" />
                <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Създай</button>
        </form>
    </div>
</div>
<script src="~/js/upload-files.js" asp-append-version="true"></script>
