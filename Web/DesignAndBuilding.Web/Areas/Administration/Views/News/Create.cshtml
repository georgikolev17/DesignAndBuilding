@model DesignAndBuilding.Web.ViewModels.News.NewsInputModel

@{
    this.ViewData["Title"] = "Създай новина";
}

<div class="container-fluid">
    <h1>@this.ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Въведете заглавие на новината" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Content" class="control-label"></label>
                            <textarea asp-for="Content" class="form-control" rows="10" placeholder="Въведете съдържание на новината"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                            <small class="form-text text-muted">Максимум 5000 символа</small>
                        </div>

                        <div class="form-group form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                Публикувай новината (активна)
                            </label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Създай
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Отказ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
